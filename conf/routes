# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Â Games
GET		/{dataSetName}							Memory.index

# DataSets
GET		/dataSets/{id}/elements					DataSets.elements
GET		/dataSets/{id}							DataSets.get

# Elements
GET		/elements/{id}							Elements.get
GET		/elements/{id}/data						Elements.data

# Relations
POST	/relations/add							Relations.add

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Import CRUD routes
*       /admin/?                                admin.Home.index
*       /admin                                  module:crud

# Catch all
*       /{controller}/{action}                  {controller}.{action}
